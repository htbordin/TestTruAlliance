@model TechTest01.Web.Models.ProductModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h1>Randon Two Products </h1>
        <table>
            <tr>
                <th>
                    Image
                </th>
                <th>
                    Name
                </th>

                <th></th>
            </tr>
            @foreach (var item in Model.ProductList)
            {
                <tr>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" width="200"/>
                     </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
      
                    <td>
                        <a href="/product/@item.Slug">Detail</a> 
                    </td>
                </tr>
            }
           </table>

        <div><a href="/products">LIST OF ALL PRODUCTS</a> </div>

    </div>
</body>
</html>